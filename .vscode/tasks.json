{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++.exe build with libcurl",
      "type": "cppbuild",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-I", "C:/Users/Hammad/Downloads/Compressed/curl-8.13.0_4-win64-mingw/curl-8.13.0_4-win64-mingw/include",
        "-L", "C:/Users/Hammad/Downloads/Compressed/curl-8.13.0_4-win64-mingw/curl-8.13.0_4-win64-mingw/lib",
        "-lcurl",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build with libcurl using MSYS2 g++"
    }
  ]
